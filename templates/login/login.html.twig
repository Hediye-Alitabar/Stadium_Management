{% extends 'base.html.twig' %}

{% block title %}{{ 'sign_in'|trans }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h1 class="h3 mb-3 font-weight-normal">{{ 'please_sign_in'|trans }}</h1>
        </div>
        <div class="card-body">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">Credential Invalid</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        {{ 'you_are_logged_in_as'|trans({'%username%': app.user.userIdentifier}) }}, <a href="{{ path('app_logout') }}">{{ 'logout'|trans }}</a>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="username">{{ 'email'|trans }}</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="form-group">
                    <label for="password">{{ 'password'|trans }}</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'sign_in'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}