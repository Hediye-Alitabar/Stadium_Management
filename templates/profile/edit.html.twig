{% extends 'base.html.twig' %}

{% block title %}{{ 'edit_profile_title'|trans }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h1>{{ 'edit_profile_title'|trans }}</h1>
        </div>
        <div class="card-body">
            {{ form_start(userProfileForm) }}
                {{ form_row(userProfileForm.email) }}
                {{ form_row(userProfileForm.username) }}
                {{ form_row(userProfileForm.currentPassword) }}
                {{ form_row(userProfileForm.newPassword.first) }}
                {{ form_row(userProfileForm.newPassword.second) }}
                <button type="submit" class="btn btn-primary">{{ 'save_changes'|trans }}</button>
            {{ form_end(userProfileForm) }}
            <a href="{{ path('game_list') }}" class="btn btn-secondary mt-3">{{ 'back_to_home'|trans }}</a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-3">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger mt-3">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}