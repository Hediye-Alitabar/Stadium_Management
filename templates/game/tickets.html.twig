{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'tickets_for_game'|trans({'%home%': game.teamHome, '%away%': game.teamAway}) }}</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ 'buyer'|trans }}</th>
                <th>{{ 'purchase_date'|trans }}</th>
                <th>{{ 'status'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>{{ ticket.buyer.username }}</td>
                    <td>{{ ticket.purchaseDate|date('Y-m-d H:i') }}</td>
                    <td>{{ ticket.status }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('game_list') }}" class="btn btn-primary">{{ 'back_to_games'|trans }}</a>
{% endblock %}